<dx:ThemedWindow 
    x:Class="DesktopContactsApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Content="New Contact" Click="Button_Click"/>

            <TextBox Margin="0 5 0 5" TextChanged="TextBox_TextChanged" />
            <ListView SelectionChanged="contactsListView_SelectionChanged" x:Name="contactsListView"
                      Height="280"
                      Margin="0 5 0 0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock FontSize="20" Text="{Binding Name}" FontWeight="Bold" />
                            <TextBlock FontSize="15" Text="{Binding Email}" Foreground="DodgerBlue"/>
                            <TextBlock FontSize="15" Text="{Binding Phone}" FontStyle="Italic"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </Grid>
</dx:ThemedWindow>
